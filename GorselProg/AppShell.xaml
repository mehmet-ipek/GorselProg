<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GorselProg.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GorselProg"
    Title="GorselProg">

    <TabBar>
        <ShellContent
            Icon="home.png"
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Icon="calculator.png"
            Title="Standart"
            ContentTemplate="{DataTemplate local:CalculatorPage}"
            Route="CalculatorPage" />

        <ShellContent
            Icon="scientific.png"
            Title="Bilimsel"
            ContentTemplate="{DataTemplate local:ScientificPage}"
            Route="ScientificPage" />
    </TabBar>
</Shell>
