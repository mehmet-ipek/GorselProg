<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProg.CalculatorPage"
             Title="Standart"
             BackgroundColor="#F3F3F3">

    <ContentPage.Resources>
       
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="#D9D9D9"/>
            <Setter Property="TextColor" Value="Blue"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HeightRequest" Value="65"/>
        </Style>

        
        <Style TargetType="Button" x:Key="MemoryButton">
            <Setter Property="BackgroundColor" Value="#E6E6E6"/>
            <Setter Property="TextColor" Value="#0047AB"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>

    <Grid Padding="15"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="*,*,*,*">

       
        <Label x:Name="lblHistory"
               Grid.Row="0" Grid.ColumnSpan="4"
               Text=""
               TextColor="Gray"
               FontSize="16"
               HorizontalTextAlignment="End"
               VerticalTextAlignment="End"
               Margin="0,5,0,0"/>

      
        <Label x:Name="cScreen"
               Grid.Row="1" Grid.ColumnSpan="4"
               Text="0"
               FontSize="48"
               FontAttributes="Bold"
               BackgroundColor="White"
               TextColor="Black"
               HorizontalTextAlignment="End"
               VerticalTextAlignment="Center"
               Padding="10"
               HeightRequest="80"
               Margin="0,0,0,10"/>

        
        <Button Text="MC" Grid.Row="2" Grid.Column="0" Style="{StaticResource MemoryButton}" />
        <Button Text="MR" Grid.Row="2" Grid.Column="1" Style="{StaticResource MemoryButton}" />
        <Button Text="M+" Grid.Row="2" Grid.Column="2" Style="{StaticResource MemoryButton}" />
        <Button Text="M-" Grid.Row="2" Grid.Column="3" Style="{StaticResource MemoryButton}" />

        
        <Button Grid.Row="3" Grid.Column="0" Text="%" />
        <Button Grid.Row="3" Grid.Column="1" Text="CE" />
        <Button Grid.Row="3" Grid.Column="2" Text="C" Clicked="Clear_Clicked" />
        <Button Grid.Row="3" Grid.Column="3" Text="⌫" Clicked="BackSpaceClicked" />

       
        <Button Grid.Row="4" Grid.Column="0" Text="1/x" />
        <Button Grid.Row="4" Grid.Column="1" Text="x²" Clicked="Square_Clicked" />
        <Button Grid.Row="4" Grid.Column="2" Text="√" />
        <Button Grid.Row="4" Grid.Column="3" Text="÷" Clicked="OperatorClicked" />

       
        <Button Grid.Row="5" Grid.Column="0" Text="7" Clicked="NumClicked" />
        <Button Grid.Row="5" Grid.Column="1" Text="8" Clicked="NumClicked" />
        <Button Grid.Row="5" Grid.Column="2" Text="9" Clicked="NumClicked" />
        <Button Grid.Row="5" Grid.Column="3" Text="×" Clicked="OperatorClicked" />

        
        <Button Grid.Row="6" Grid.Column="0" Text="4" Clicked="NumClicked" />
        <Button Grid.Row="6" Grid.Column="1" Text="5" Clicked="NumClicked" />
        <Button Grid.Row="6" Grid.Column="2" Text="6" Clicked="NumClicked" />
        <Button Grid.Row="6" Grid.Column="3" Text="−" Clicked="OperatorClicked" />

        
        <Button Grid.Row="7" Grid.Column="0" Text="1" Clicked="NumClicked" />
        <Button Grid.Row="7" Grid.Column="1" Text="2" Clicked="NumClicked" />
        <Button Grid.Row="7" Grid.Column="2" Text="3" Clicked="NumClicked" />
        <Button Grid.Row="7" Grid.Column="3" Text="+" Clicked="OperatorClicked" />

       
        <Button Grid.Row="8" Grid.Column="0" Text="+/-" />
        <Button Grid.Row="8" Grid.Column="1" Text="0" Clicked="NumClicked" />
        <Button Grid.Row="8" Grid.Column="2" Text="," />
        <Button Grid.Row="8" Grid.Column="3"
                Text="="
                BackgroundColor="#3D348B"
                TextColor="White"
                FontSize="32"
                CornerRadius="10"
                Clicked="EqualClicked" />
    </Grid>
</ContentPage>
